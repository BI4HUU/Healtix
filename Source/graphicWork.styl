.graphicWork
	padding 0
	background-color #249cf2
	color #fff
	position: relative
	top -80px
	z-index 9999
	h3
		font-weight 400
		font-size 26px
		font-family Lato, sans-serif
	p
		font-size 18px
		font-weight 300
	&_block:hover
		box-shadow: 0px 8px 59px 0px rgba(6,30,52,0.1)
	&_block
		width 33.3%
		padding 30px
		&_tel
			color inherit
			text-decoration none
			font-size 36px
	&_btn
		display inline-block
		font-size 14px
		font-weight 500
		margin-right auto
		border 1px solid #fff
	&_btn:hover
		background-color: #fff
		color: #249cf2
.lineGraphic
	padding 10px 0
	font-weight 600
.lineGraphic:not(:last-child)
	border-bottom 1px solid rgba(250,250,250 .4)

