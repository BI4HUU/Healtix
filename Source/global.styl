body
	// background #ddd
	margin 0
	padding 0


@font-face 
	font-family 'fa'
	src url('font/fontawesome-webfont.woff2')
	font-weight normal
	font-style normal

.btn
	display inline-block
	padding 16px 36px
	font-size 16px
	font-weight 400
	letter-spacing 3px
	border 1px solid #aaa
	border-radius 3px
	color inherit
	text-decoration none
	text-transform uppercase
	cursor pointer
	margin-top auto
	margin-bottom auto
	transition all .5s

.h2
	font-size 38px
	font-weight 400

.form
	display: block
	width: 100%
	padding: 16px
	margin: 22px 0
	font-size 16px

.card
	position: relative
	display: -ms-flexbox
	display: flex
	-ms-flex-direction: column
	flex-direction: column
	word-wrap: break-word
	background-color: #fff
	background-clip: border-box
	//border: 1px solid rgba(0, 0, 0, 0.125)
	//border-radius: 0.25rem

.card-body
	-ms-flex: 1 1 auto
	flex: 1 1 auto
	padding: 1.25rem

.card-img-top
	width: 100%
	height auto

.card-text_small
	font-size 10px