header
	z-index 99999
	background rgba(0, 0, 0, .3)
	color #fff
	top 0
	left 0
	right 0

.contact
	border-bottom 1px solid #aaa
	font-family Lato, sans-serif
	font-size .875rem
	.left
		margin-left 5px
	.right
		margin-right 5px
	&_location, &_email, &_tel, &_soc, &_search, &_shops
		padding 15px 10px
	&_email, &_soc, &_search, &_shops
		border-left 1px solid #aaa
	&_email a, &_tel a
		text-decoration none
		color inherit
		transition 0.3s all ease
	&_email a:hover, &_tel a:hover
		color #249cf2
	&_tel a
		font-weight 700
	&_icon svg, &_shops svg, &_search svg
		height 15px
		width 15px
		margin 0 4px
		fill #fff
		transition 0.3s all ease
	&_icon svg:hover, &_shops svg:hover, &_search svg:hover
		fill #249cf2
		cursor pointer

.logo
	height 38px
	width 190px
	cursor pointer
	@media (min-width: 576px)
		height 36px
		width 180px
	@media (min-width: 1100px)
		height 38px
		width 190px
nav
	font-size 18px
	font-family Lato, sans-serif
	font-weight 400
	@media (min-width: 110px)
		font-size 17px
	@media (min-width: 1200px)
		font-size 18px

.header
	&_btn
		font-size 12px
		@media (min-width: 576px)
			font-size 11px
			padding: 12px 26px
		@media (min-width: 1100px)
			font-size 11px
			padding: 15px 32px
		@media (min-width: 1200px)
			padding: 16px 36px
			font-size 12px
	&_btn:hover
		border-color #4cb5ff
		background-color #4cb5ff

	&_item_menu
		padding 35px 12px
		border-bottom 3px solid rgba(0, 0, 0, 0)
		cursor pointer
		@media (min-width: 576px)
			padding 30px 10px
		@media (min-width: 1100px)
			padding 32px 11px
		@media (min-width: 1200px)
			padding 35px 12px
	&_item_menu:hover, &_item_menu_akcent
		border-bottom 3px solid #fff

	&_item_menu > i
		margin 0 4px
		display inline-block
		transform-origin center
		transform rotate(90deg) scale(0.75, 1)
	&_item_menu:hover .dropMenu1,
	&_item_menu:hover .dropMenu2
		visibility: visible
		opacity: 1
	&_card:hover
		box-shadow: 0 0 5px 5px rgba(6,30,52,.08)
		cursor: pointer
		transition 0.3s all ease
	&_h2AndList h3
		font-size 20px
		font-weight 500
	&_h2AndList ul
		padding-left: 0
	&_h2AndList li
		display: block
		padding: 10px 0
		border-bottom: 1px solid #eee
		font-size 14px
		color: rgba(92, 92, 92, 0.7)
		font-weight 300
		list-style-type none
		cursor: pointer
		transition .3s all ease
	&_h2AndList li:hover
		color #4cb5ff
.dropMenu1
	font-size 15px
	color #888
	background: #fff
	visibility: hidden
	opacity: .2
	left: 0
	top: 100%
	box-sizing border-box
	margin-top: 3px
	transition: all .3s ease-in-out
	&_item
		display: flex
		justify-content space-between
		width: 160px
		border-left 1px solid #eee
		border-right 1px solid #eee
		border-bottom 1px solid #eee
		padding: 16px 18px
	&_item:hover
		color #4cb5ff
		background: #eee
	&_item i
		margin-right 0

.dropMenu2
	color: #000000
	left: 0
	top: 100%
	opacity .2
	box-sizing border-box
	visibility hidden
	transition: all .3s ease-in-out
	background: #fff
	box-shadow: 0 10px 30px 0 rgba(80,80,80,0.4)
	cursor default

.head_docInfo
	flex-direction column
	padding: 30px
	&_small
		font-size 12px
		color #888
		text-transform: uppercase
		letter-spacing: 1px
	&_name
		margin-top: 5px
		margin-bottom: 15px
		font-size 18px
		font-weight 600
		text-decoration none
		color inherit
		transition: all .3s linear
	&_name:hover
		color #249cf2
		cursor pointer
	&_svg svg
		fill #888
		height: 14px
		width: 14px
		padding-top 1px
		margin-right: 10px
		transition: all .3s linear
	&_wrapTelMail:hover &_tel, &_wrapTelMail:hover &_mail, &_wrapTelMail:hover &_svg  svg
		color #249cf2
		fill #249cf2
	&_tel, &_mail
		font-size 15px
		text-decoration none
		color #888
		font-weight 300
		transition: all .3s linear











