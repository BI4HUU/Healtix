.specialists
	color #249cf2
	padding: 50px 30px
	margin: 0
	&_h2
		margin-bottom: 8px
	&_col
		color #fff
		margin 40px 15px 40px 15px
		padding: 0
		overflow hidden
		box-shadow: 0 8px 59px 0 rgba(6,30,52,.1)
	&_p
		color #666
		line-height 30px
		font-size 18px
		width 45%

	&_btn
		color #ffffff
		font-weight 400
		border none
		background-color #249cf2
	&_btn:hover
		background #222

.docImg
	width: 100%
	margin: 0
	//height auto
	min-height 300px
.docInfo
	flex-direction column
	opacity: 0
	left: 0
	top: 0
	width: 100%
	height: 100%
	padding: 30px
	background: linear-gradient(to top,rgba(0,0,0,.6) 20%,transparent 50%)
	transform: translateY(30px)
	transition: opacity .3s linear,transform .4s;

	&_small
		text-transform: uppercase
		margin-top auto
		letter-spacing: 1px
	&_name
		margin-top: 5px
		margin-bottom: 15px
		font-size 20px
		font-weight 600
		text-decoration none
		color inherit
		transition: all .3s linear
	&_name:hover
		color #249cf2
		cursor pointer
	&_svg svg
		fill #fff
		height: 14px
		width: 14px
		margin-right: 10px
		transition: all .3s linear
	&_wrapTelMail:hover &_tel, &_wrapTelMail:hover &_mail, &_wrapTelMail:hover &_svg  svg
		color #249cf2
		fill #249cf2
	&_tel, &_mail
		text-decoration none
		color inherit
		font-weight 300
		transition: all .3s linear
	&_tel:hover
		color #249cf2
	&_mail:hover
		color #249cf2
.docInfo:hover
	opacity: 1
	transform: translateY(0)





